<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/headset_icon_dimensions"
            android:layout_height="@dimen/headset_icon_dimensions"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:background="@drawable/main_music"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/goto_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_labels_margin_bottom"
            android:layout_marginLeft="@dimen/main_screen_labels_margin_left"
            android:layout_marginStart="@dimen/main_screen_labels_margin_left"
            android:text="@string/track_screen"
            android:textColor="@color/text_color"
            android:textSize="@dimen/main_screen_text_size" />

        <TextView
            android:id="@+id/goto_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_labels_margin_bottom"
            android:layout_marginLeft="@dimen/main_screen_labels_margin_left"
            android:layout_marginStart="@dimen/main_screen_labels_margin_left"
            android:text="@string/now_playing"
            android:textColor="@color/text_color"
            android:textSize="@dimen/main_screen_text_size" />

    </LinearLayout>
</ScrollView>


